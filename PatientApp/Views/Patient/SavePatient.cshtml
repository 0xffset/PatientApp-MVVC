@using PatientApp.Core.Application.ViewModerls.Patient
@model SavePatientViewModel
@{
    bool editMode = Model.Id == 0 ? false : true;

    ViewData["Title"] = "Save Patient";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>@(editMode ? $"Editing the patient: {Model.FirstName} {Model.LastName}" : "Creating a New Patient")</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Patient" asp-action="@(editMode ? "Edit":"Create")" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name: </label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name: </label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone: </label>
                            <input asp-for="Phone" type="text" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Select a image</label>
                            @if (editMode)
                            {
                                <input asp-for="File" class="form-control" />
                            }
                            else
                            {
                                <input required asp-for="File" class="form-control" />
                            }

                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address: </label>
                            <textarea asp-for="Address" type="text" class="form-control"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DNI" class="form-label">DNI: </label>
                            <input asp-for="DNI" type="text" class="form-control" />
                            <span asp-validation-for="DNI" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BirthDate" class="form-label">Birh Date: </label>
                            <input asp-for="BirthDate" type="date" class="form-control" />
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <label asp-for="IsSmoker" class="form-label">Smoke: </label>
                                <input asp-for="IsSmoker" type="checkbox" class="form-check-input" />
                                <span asp-validation-for="IsSmoker" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <label asp-for="HasAllergies" class="form-label">Allergies: </label>
                                <input asp-for="HasAllergies" type="checkbox" class="form-check-input" />
                                <span asp-validation-for="HasAllergies" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-controller="Patient" asp-action="Index" class="btn btn-warning">Back</a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

