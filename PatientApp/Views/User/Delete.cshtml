@using PatientApp.Core.Application.ViewModels.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Are you sure want to delete @Model.FirstName @Model.LastName?</h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="User" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-controller="User" asp-action="Index" class="btn btn-warning">Cancel</a>
                </form>

            </div>
        </div>
    </div>

</div>

