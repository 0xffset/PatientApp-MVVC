@using PatientApp.Core.Application.ViewModerls.Appointment
@model List<SaveAppointmentPendingResult>;


<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Laboratory Complete</h1>
           
    </div>
</section>


<div class="container">
    @if (Model == null || Model.Count == 0)
    {
        <h2>There are not laboratory results completed</h2>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>

                    <th scope="col">Id</th>
                    <th scope="col">Laboratory Test Name</th>
                    <th scope="col">Laboratory Result Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SaveAppointmentPendingResult item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.LaboratoryTestName</td>
                        <td>@(@item.LaboratoryResultStatus == 0 ? "Pending" : "Completed")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>